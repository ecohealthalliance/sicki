mixin textField(field, value)
  div
    span.name= field.name + ': '
    span.value= value
  div.edit
    input(class = 'text', value = value)
    input(class = 'commit', type = 'submit', value = 'Commit')
  
div
  if field.type == 'text' || field.type === undefined
    mixin textField(field, model[field.name])