template(name="referenceDetails")
  .reference-fields.fields
    {{#each fields}}
      .reference-field.field(data-field-name="{{name}}") 
        .field-title {{label}}:&nbsp;&nbsp;
          span.top-proposal {{topProposalValue}}
        .proposal-list
          {{#each proposals}}
            .proposal(data-proposal-id="{{_id}}")
              {{#if creatorList}}
                span {{creatorList}}&nbsp;&nbsp;
              {{else}}
                span {{value}}&nbsp;&nbsp;
              {{/if}}
              {{#if user.displayName}}
                span Proposed by {{user.displayName}} on {{date}}
              {{/if}}
              {{#if canAccept}}
                button.accept-button Accept
              {{/if}}
          {{/each}}
          .add-proposal
            span {{label}}:&nbsp;
            input.add-proposal-value(type="text")
            span &nbsp;
            button.add-proposal-button Add Proposal
    {{/each}}


