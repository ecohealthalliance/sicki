template(name="eidEvent")
  {{#each fields}}
    .event-field(data-field-name="{{name}}") 
      .event-field-title {{label}}
      {{#each proposals}}
        .proposal(data-proposal-id="{{proposalId}}")
          {{#if pathogen}}
            span {{pathogen.reported_name}}&nbsp;&nbsp;
          {{else}}
            span {{value}}&nbsp;&nbsp;
          {{/if}}
          span {{refList}}&nbsp;&nbsp;
          {{#if userDisplayName}}
            span Proposed by {{userDisplayName}} on {{date}}
            {{#if canAccept}}
              button.accept-button Accept
            {{/if}}
          {{/if}}
      {{/each}}
      .add-proposal
        span Value:&nbsp;
        input.add-proposal-value(type="text")
        span &nbsp;
        span References:&nbsp;
        span.reference-list(data-reference-ids="")
        input.add-proposal-references(type="text")
        span &nbsp;
        button.add-proposal-button Add Proposal
  {{/each}}


