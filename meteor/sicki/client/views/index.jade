body
  {{> header}}
  #main
    {{> contentIfLoggedIn}}

template(name="contentIfLoggedIn")
  {{#if user}}
    {{> content}}
  {{else}}
    .login-required-message Log in to view EID Events
  {{/if}}

template(name="content")
  {{#if selectedId}}
    {{> selectedEditPage}}
  {{else}}
    {{> selectedTable}}
  {{/if}}


template(name="selectedEditPage")
  {{{renderSelectedEditPage}}}


template(name="selectedTable")
  {{{renderSelectedTable}}}
